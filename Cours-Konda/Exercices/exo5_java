import java.util.Scanner;

public class exo4_cor {

    public static void main(String[] args) {
        /***--------  Début du code  -------------------****/

         int a;

          Scanner clavier = new Scanner(System.in); // Déclaration du scanner Instance de l'Objet Scanner 

          System.out.println("La valeur de a"); // Affiche un message
          a = clavier.nextInt(); // Récupère la valeur saisie par l'utilisateur

          if (a % 2 == 0) { // Vérifie si a est divisible par 2
              System.out.println(a + " est divisible par 2");
          } else {
              System.out.println(a + " n'est pas divisible par 2");
          }

        clavier.close();

        

    }
}       